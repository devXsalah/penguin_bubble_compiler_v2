penguinSay "Welcome to the PenguinBubble Calculator!"

keepWalking(True)
    penguinSay "Choose an operation:"
    penguinTake(choice) "Enter your choice: "

    penguinIf(choice == 6)
        penguinSay "Exiting the calculator. Goodbye!"
        penguinBreak

    penguinSay "You entered choice: " + str(choice)
